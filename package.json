        },
        "testRegex": "\\.spec\\.js$",
        "setupFiles": [
            "<rootDir>/test/jest-pretest.js"
        ],
        "testEnvironment": "node",
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.js",
            "!**/*.spec.js",
            "!**/node_modules/**",
            "!**/test/**"
        ],
        "coverageDirectory": "<rootDir>/test/coverage-jest",
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ]
